<Page x:Class="Tic_Tac_Toe.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tic_Tac_Toe.Pages"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      fw:AcrylicWindow.Enabled="True"
      fw:AcrylicWindow.NoiseOpacity="0"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Title="SettingsPage">

    <Grid fw:PointerTracker.Enabled="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Button Content="Play!" IsHitTestVisible="{Binding Path=CanSelect}"
                        Style="{DynamicResource ButtonRevealStyle}"
                        Background="{DynamicResource SystemAltHighColorBrush}"
                        Foreground="{DynamicResource SystemBaseHighColorBrush}" Margin="25,14.6,24.6,14.8" Click="Button_Click" Grid.Row="7"/>
        <TextBox x:Name="Nrows" Style="{DynamicResource TextBoxRevealStyle}" Background="{DynamicResource SystemAltHighColorBrush}" Foreground="{DynamicResource SystemBaseHighColorBrush}" Text="3" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap" Margin="25,14.8,24.6,15.4" Grid.IsSharedSizeScope="True" Grid.Row="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Specify board size" Margin="10,9.8,9.6,10.2" VerticalContentAlignment="Center" Grid.Row="5" HorizontalContentAlignment="Center"/>
        <StackPanel  IsEnabled="False"  x:Name="RadioButtons" Margin="10,5,9.6,4.6" Grid.RowSpan="2">
            <RadioButton GroupName="GameMode" Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="User vs User on the same PC" IsChecked="True" VerticalContentAlignment="Center" />
            <RadioButton GroupName="GameMode" Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="User vs Bot" VerticalContentAlignment="Center" />
            <RadioButton GroupName="GameMode" Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="User vs User via internet" VerticalContentAlignment="Center" />
        </StackPanel>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Difficulty" Margin="33.4,5,50,5" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <ComboBox Style="{DynamicResource ComboBoxRevealStyle}" Background="{DynamicResource SystemAltHighColorBrush}" Foreground="{DynamicResource SystemBaseHighColorBrush}" IsEnabled="False" Margin="33.4,0,50,1.6" Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Impossible"/>
        </ComboBox>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Name for the first user" Margin="25,5.4,24.6,5.8" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Name for the second user" Margin="20.4,5.4,20,5.8" Grid.Row="2" Grid.Column="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Style="{DynamicResource TextBoxRevealStyle}" Background="{DynamicResource SystemAltHighColorBrush}" Foreground="{DynamicResource SystemBaseHighColorBrush}" IsEnabled="False" Margin="25,9.2,24.6,9.8" Grid.Row="3"/>
        <TextBox Style="{DynamicResource TextBoxRevealStyle}" Background="{DynamicResource SystemAltHighColorBrush}" Foreground="{DynamicResource SystemBaseHighColorBrush}" IsEnabled="False" Margin="25.4,9.2,25,9.8" Grid.Row="3" Grid.Column="2"/>
    </Grid>
</Page>
