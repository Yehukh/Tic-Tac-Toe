<Page x:Class="Tic_Tac_Toe.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tic_Tac_Toe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Title="SettingsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Button Content="Start!" Margin="25,15" Click="Button_Click" Grid.Row="7"/>
        <TextBox x:Name="Nrows" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap" Margin="25,10" Grid.IsSharedSizeScope="True" Grid.Row="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Specify board size" Margin="10" VerticalContentAlignment="Center" Grid.Row="4" HorizontalContentAlignment="Center"/>
        <StackPanel x:Name="RadioButtons" Margin="10,5" Grid.RowSpan="2">
            <RadioButton GroupName="GameMode" Content="User vs User on the same PC" IsChecked="True" VerticalContentAlignment="Center" />
            <RadioButton GroupName="GameMode" Content="User vs Bot" VerticalContentAlignment="Center" />
            <RadioButton GroupName="GameMode" Content="User vs User via internet" VerticalContentAlignment="Center" />
        </StackPanel>
        <Label Content="Difficulty" Margin="33,5,50,5" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <ComboBox Margin="33,0,50,0" Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Impossible"/>
        </ComboBox>
        <Label Content="Name for the first user" Margin="25,5" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Name for the second user" Margin="25,5" Grid.Row="2" Grid.Column="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Margin="25,10" Grid.Row="3"/>
        <TextBox Margin="25,10" Grid.Row="3" Grid.Column="2"/>
        <GridSplitter HorizontalAlignment="Stretch" Margin="0" Grid.Column="1" Grid.RowSpan="9"/>
    </Grid>
</Page>
