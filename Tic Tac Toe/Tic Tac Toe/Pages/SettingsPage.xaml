<Page x:Class="Tic_Tac_Toe.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tic_Tac_Toe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Title="SettingsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="270*"/>
        </Grid.RowDefinitions>
        <Button Content="Button" Margin="2" Click="Button_Click" Grid.Row="2" Grid.Column="1"/>
        <TextBox x:Name="Nrows" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap" Margin="2" Grid.IsSharedSizeScope="True" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Provide value >= 3 and less or equal 20" Margin="90,94,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left" Width="220" Height="26" VerticalAlignment="Top" Grid.ColumnSpan="3"/>

    </Grid>
</Page>
