<Page x:Class="Tic_Tac_Toe.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tic_Tac_Toe.Pages"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      fw:AcrylicWindow.Enabled="True"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Title="SettingsPage">

    <Grid fw:PointerTracker.Enabled="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Button Content="Play!" IsHitTestVisible="{Binding Path=CanSelect}"
                        Style="{DynamicResource ButtonRevealStyle}"
                        Background="{DynamicResource SystemAltHighColorBrush}"
                        Foreground="{DynamicResource SystemBaseHighColorBrush}"
                        BorderBrush="{DynamicResource SystemBaseHighColorBrush}"
                        BorderThickness="1" Margin="25,15" Click="Button_Click" Grid.Row="7"/>
        <TextBox x:Name="Nrows" Text="3" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap" Margin="25,15" Grid.IsSharedSizeScope="True" Grid.Row="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Specify board size" Margin="10" VerticalContentAlignment="Center" Grid.Row="5" HorizontalContentAlignment="Center"/>
        <StackPanel  IsEnabled="False"  x:Name="RadioButtons" Margin="10,5" Grid.RowSpan="2">
            <RadioButton GroupName="GameMode" Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="User vs User on the same PC" IsChecked="True" VerticalContentAlignment="Center" />
            <RadioButton GroupName="GameMode" Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="User vs Bot" VerticalContentAlignment="Center" />
            <RadioButton GroupName="GameMode" Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="User vs User via internet" VerticalContentAlignment="Center" />
        </StackPanel>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Difficulty" Margin="33,5,50,5" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <ComboBox Foreground="{DynamicResource SystemBaseHighColorBrush}" IsEnabled="False" Margin="33,0,50,0" Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Impossible"/>
        </ComboBox>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Name for the first user" Margin="25,5" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Name for the second user" Margin="20,5" Grid.Row="2" Grid.Column="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox IsEnabled="False" Margin="25,10" Grid.Row="3"/>
        <TextBox IsEnabled="False" Margin="25,10" Grid.Row="3" Grid.Column="2"/>
    </Grid>
</Page>
